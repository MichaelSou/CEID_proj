
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
    html, body{
        padding:0px;
        margin:0px;
        background:rgb(152, 192, 253);
        font-family: 'Raleway', sans-serif;
        color:rgb(255, 255, 255);
        height:100%;
    } 
    .reg {
  overflow: hidden;
  background-color: rgb(66, 105, 231);
  padding: 15px 30px 30px 30px;
  border-radius: 10px;
  position: fixed;
  top: 20%;
  left: 35%;
  width: 30%;
  }
  input[type=text], input[type=password] {
    display: block;
    border-radius: 5px;
    font-size: 16px;
    background: rgb(152, 192, 253);
    width: 100%;
    border: 0;
    padding: 10px 10px;
    margin: 15px -10px;
  }
  
  button {
    cursor: pointer;
    color: rgb(71, 37, 124);
    font-size: 16px;
    text-transform: uppercase;
    width: 80px;
    border: 0;
    padding: 10px 0;
    margin-top: 10px;
    margin-left: -5px;
    border-radius: 5px;
    }

    @media only screen and (max-width: 620px) {
    /* For mobile phones: */
    .reg {
        top: 20%;
        left: 20%;
        width: 45%;
    }}
    .err{
      color: rgb(136, 10, 10);
    }
    .but {
    background-color: #0095ff;
    border: 1px solid transparent;
    border-radius: 3px;
    box-shadow: rgba(255, 255, 255, .4) 0 1px 0 0 inset;
    box-sizing: border-box;
    color: #fff;
    cursor: pointer;
    display: inline-block;
    font-family: -apple-system,system-ui,"Segoe UI","Liberation Sans",sans-serif;
    font-size: 13px;
    font-weight: 400;
    line-height: 1.15385;
    margin: 0;
    outline: none;
    padding: 8px .8em;
    position: relative;
    text-align: center;
    text-decoration: none;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
    vertical-align: baseline;
    white-space: nowrap;
  }
  
  .but:hover,
  .but:focus {
    background-color: #07c;
  }
  
  .but:focus {
    box-shadow: 0 0 0 4px rgba(0, 149, 255, .15);
  }
  
  .but:active {
    background-color: #0064bd;
    box-shadow: none;
  }
  .butc {
    background-color: #ff1e00;
    border: 1px solid transparent;
    border-radius: 3px;
    box-shadow: rgba(255, 255, 255, .4) 0 1px 0 0 inset;
    box-sizing: border-box;
    color: #fff;
    cursor: pointer;
    display: inline-block;
    font-family: -apple-system,system-ui,"Segoe UI","Liberation Sans",sans-serif;
    font-size: 13px;
    font-weight: 400;
    line-height: 1.15385;
    margin: 0;
    outline: none;
    padding: 8px .8em;
    position: relative;
    text-align: center;
    text-decoration: none;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
    vertical-align: baseline;
    white-space: nowrap;
  }
  
  .butc:hover,
  .butc:focus {
    background-color: rgb(204, 24, 0);
  }
  
  .butc:focus {
    box-shadow: 0 0 0 4px rgba(117, 10, 2, 0.15);
  }
  
  .butc:active {
    background-color: #bd1600;
    box-shadow: none;
  }
  
</style>



<div class="reg">
    <% if (locals.title != null) { %>
        <h2><%= title %></h2>
    <% } %>
    <% if (locals.errorMessage != null) { %>
        <p class="err"><%= errorMessage %></p>
    <% } %>
<form action="/users/new" method="POST">
    <label for="email">Email:</label>
    <input type="text" name="email" id="email">

    <label for="username">Username</label>
    <input type="text" id="username" name="username">

    <label for="password">Password</label>
    <input type="password" id="password" name="password">

    <a class="butc" href="/">Cancel</a>
    <button class="but" type="submit">Create</button>
</form>

</div>